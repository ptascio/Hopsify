
<div class="container-fluid">
<div class="row">
  <div class="col-sm-12">
    <h1>Beers</h1>
  </div>
</div>



<div class="row">
  <div class="col-sm-6">
    <h3><%= @beer["data"][0]["style"]["name"] %></h3>
    <p><%= @beer["data"][0]["style"]["description"]%></p>
    </div>
    <div class="col-sm-6">
      <h3><%= @artist_name %></h3>
      <%= image_tag  @artist_pic %>
    </div>
</div>
</div>

<div class="container-fluid text-center">

  <% beer_info = @beer["data"] %>
  <% beer_info.each do |beer| %>
<div class="row">
  <div class="col-sm-12">
    <h3><%= beer["nameDisplay"] %></h3>
  </div>
</div>

    <% if beer["description"].nil? %>
    <div class="row">
      <div class="col-sm-12">
        <p><em>No description available...</em></p>
      </div>
    </div>
    <div class="row">
      <div class="col-sm-12">
        <p><em>...you'll have to try it and let us know what you think!</em></p>
      </div>
    </div>


    <% else %>
    <div class="row">
      <div class="col-sm-12">
        <p><%= beer["description"] %></p>
      </div>
    </div>

    <% end %>
    <% if beer["labels"]%>
    <div class="row">
      <div class="col-sm-12">
        <%= image_tag beer["labels"]["medium"] %>
      </div>
    </div>


    <% else %>
    <div class="row">
      <div class="col-sm-12">
        <p><em>No Label available...</em></p>
      </div>
    </div>
    <div class="row">
      <div class="col-sm-12">
        <p><em>...so here's a picture of a pint!</em></p>
      </div>
    </div>

    <div class="row ">
      <div class="col-sm-12 beer-glass">
        <%= image_tag("pint_medium.png") %>
      </div>
    </div>


    <% end %>
  <% end %>


<% if ((@id != "6969") && (@search_count.to_i < 3)) %>
  <%= button_to "Find more beers", params: {:beer_id => @id, :artist_pic => @artist_pic, :artist_name => @artist_name, :search_count => @search_count } %>
<% else %>
  <p>That's all the beers we have for this song! Try a new search!</p>
<% end %>
<%= link_to "New Search", root_path %>
</div>
